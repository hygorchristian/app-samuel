<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cadastro_categoria"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_voltarLitaLoja"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/ic_volta_samu"/>

            <EditText
                android:id="@+id/edtBusacarListaEmpresa"

                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/modelo_tolbar_filtro"
                android:hint="Pesquisar"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textAutoComplete" />

<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Dados Empresa"
                android:textSize="20dp" />

     -->


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>